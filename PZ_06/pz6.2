import random

def create_list():
    try:
        N = int(input("Введите размер списка N: "))
        if N <= 0:
            print("Размер списка должен быть положительным")
            return
        
        A = []
        i = 0
        while i < N:
            A.append(random.randint(1, 20))
            i += 1
        
        print(f"\nСписок A: {A}")
        
        B = []
        k = 0
        while k < N:
            sum_val = 0
            i = 0
            while i <= k:
                sum_val += A[i]
                i += 1
            B.append(sum_val)
            k += 1
        
        print(f"Список B: {B}")
        
    except ValueError:
        print("Ошибка! Введите целое число")

create_list()
