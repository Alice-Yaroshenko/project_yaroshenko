import random

def shift_list():
    try:
        N = int(input("Введите размер списка N: "))
        if N <= 0:
            print("Размер списка должен быть положительным")
            return
        
        A = []
        i = 0
        while i < N:
            A.append(random.randint(1, 20))
            i += 1
        
        print(f"\nИсходный список A: {A}")
        
        try:
            K = int(input(f"Введите K (1 < K < {N}): "))
            if K <= 1 or K >= N:
                print(f"Ошибка! K должно быть в диапазоне 1 < K < {N}")
                return
        except ValueError:
            print("Ошибка! Введите целое число")
            return
        
        i = N - 1
        while i >= K:
            A[i] = A[i - K]
            i -= 1
        
        i = 0
        while i < K:
            A[i] = 0
            i += 1
        
        print(f"Результат: {A}")
        
    except ValueError:
        print("Ошибка! Введите целое число для размера списка")

shift_list()
